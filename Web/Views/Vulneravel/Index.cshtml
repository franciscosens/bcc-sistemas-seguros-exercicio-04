
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">

        <h3>Lista de Arquivos</h3>

        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Preview</th>
                    <th>Nome</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Web.Models.ArquivoVulneravel vulneravel in ViewBag.Arquivos)
                {

                <tr>
                    <td>
                        <img src="@System.IO.Path.Combine(ViewBag.Caminho, vulneravel.Nome)" />
                    </td>
                    <td>@vulneravel.Nome</td>
                    <td>
                        <a href="/vulneravel/download?nome=@vulneravel.Nome" target="_blank">Download</a>

                    </td>
                </tr>
                }
            </tbody>

        </table>

    </div>

    <div class="col-6">

        <h3>Upload de Arquivos</h3>

        <form method="post" enctype="multipart/form-data" asp-controller="Vulneravel" asp-action="Upload">

            <div class="custom-file">
                <input type="file" id="arquivo" name="arquivo" class="custom-file-input">
                <label for="arquivo" class="custom-file-label">Arquivo</label>
            </div>

            <div class="mt-3">
                <button class="btn btn-success float-right" type="submit">Enviar</button>
            </div>
        </form>

    </div>

</div>

@section Scripts  {
    <script src="~/js/vulneravel.js"></script>
}